{
  "family": "metrics-engine-cp",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::706341500093:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::706341500093:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "metrics-engine-cp",
      "image": "PLACEHOLDER_IMAGE_URI",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "DB_NAME",
          "value": "metrics_engine_cp"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "SNS_TOPIC_ARN",
          "value": "arn:aws:sns:us-east-1:706341500093:metrics-run-request.fifo"
        },
        {
          "name": "SNS_TOPIC_IS_FIFO",
          "value": "true"
        },
        {
          "name": "SQS_PROJECTION_UPDATE_QUEUE_URL",
          "value": "https://sqs.us-east-1.amazonaws.com/706341500093/metrics-engine-cp-projection-updates-consumer.fifo"
        },
        {
          "name": "SQS_PROJECTION_UPDATE_ENABLED",
          "value": "true"
        },
        {
          "name": "SQS_METRIC_RUN_STARTED_QUEUE_URL",
          "value": "https://sqs.us-east-1.amazonaws.com/706341500093/metric-run-started-consumer.fifo"
        },
        {
          "name": "SQS_METRIC_RUN_STARTED_ENABLED",
          "value": "true"
        },
        {
          "name": "SQS_METRIC_RUN_HEARTBEAT_QUEUE_URL",
          "value": "https://sqs.us-east-1.amazonaws.com/706341500093/metric-run-hearthbeat-consumer.fifo"
        },
        {
          "name": "SQS_METRIC_RUN_HEARTBEAT_ENABLED",
          "value": "true"
        },
        {
          "name": "SQS_METRIC_RUN_COMPLETED_QUEUE_URL",
          "value": "https://sqs.us-east-1.amazonaws.com/706341500093/metric-run-completed.fifo"
        },
        {
          "name": "SQS_METRIC_RUN_COMPLETED_ENABLED",
          "value": "true"
        },
        {
          "name": "S3_BUCKET",
          "value": "ingestor-datasets"
        }
      ],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:706341500093:secret:metrics_engine_db_creds:host::"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:706341500093:secret:metrics_engine_db_creds:port::"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:706341500093:secret:metrics_engine_db_creds:username::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:706341500093:secret:metrics_engine_db_creds:password::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/metrics-engine-cp",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node -e \"require('http').get('http://localhost:3000/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})\" || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 40
      }
    }
  ]
}

